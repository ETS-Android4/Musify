<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--true = music is playing -> 'pause' image-->
    <item
        android:state_checked="true"
        android:drawable="@drawable/pause_button_bb86fc"/>

    <!--false = music is not playing -> 'play' image-->
    <item
        android:state_checked="false"
        android:drawable="@drawable/play_button_bb86fc"/>

</selector>