<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:contentPaddingTop="5dp"
    app:contentPaddingBottom="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="50dp"
    app:cardBackgroundColor="@color/dark_background2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/musify_icon_round"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/card_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song's name"
                android:textColor="@color/white"
                android:textSize="17.5sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/card_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singer's name"
                android:textColor="@color/purple_200"
                android:textSize="12.5sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/card_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="10dp"
            android:text="3:33"
            android:textColor="@color/purple_200"
            android:textSize="12.5sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>