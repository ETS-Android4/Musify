<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SongDisplayFragment"
    android:background="@color/dark_background2"
    android:id="@+id/root_song_display">

    <ImageView
        android:id="@+id/imageview_display_exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/musify_icon_round"/>

    <ImageView
        android:id="@+id/imageview_display_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/splash_bg"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textview_display_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_display_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="song name" />

    <TextView
        android:id="@+id/textview_display_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_display_song"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="singer name" />

    <CheckBox
        android:id="@+id/imageview_display_play_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/textview_display_singer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_song_display_play_pause"
        android:button="@null"
        android:checked="true"/>

</RelativeLayout>